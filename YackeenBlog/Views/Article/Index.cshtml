@model  YackeenBlog.ViewModels.ArticleViewModel

@{
    ViewBag.Title = "Index";
}
        <div class="container mt-5 pt-5">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="my-4">
                        Yackeen Blog
                        <small>Articles Collection</small>
                    </h1>
                        <form>
                            <div class="form-row justify-content-between">
                                <div class="col-md-4">
                                    <label for="categories">Categories</label>
                                    <select id="categories" class="form-control mb-4">
                                        <option selected="selected">Select Category</option>
                                        @foreach (var cat in Model.Categories)
                                        {
                                            <option value="@cat.Id">@cat.Name</option>
                                        }
                                    </select>
                                </div>
                                @if (User.IsInRole("Admin"))
                                {
                                    <div class="col-md-4">
                                        <a href="@Url.Action("create","article")" class="btn mt-4 btn-primary">
                                            Create New Article
                                        </a>
                                    </div>
                                }

                            </div>
                        </form>
                      
                   
             

                    <!-- Blog Post -->
                    <table id="table" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Posted On</th>                               
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var article in Model.Articles)
                            {
                                <tr>
                                    <td>
                                        <a href="@Url.Action("details","article",new { id = article.Id})">
                                           @article.Title
                                        </a>
                                    </td>
                                    <td>@article.CreatedOn.ToShortDateString()</td>
                                </tr>
                             }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>


